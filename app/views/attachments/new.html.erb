<%= form_for(@attachment) do |f| %>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_field :message %>
  </div>

  <div class="field">
    <%= f.label :file%><br>
    <%= f.file_field :file%>
  </div>
  <%- if @attachment.file_data? %>
    <div class="field">
      Remove attachment: <%= f.check_box :remove_file%>
    </div>
  <%- end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
